    "test": "vitest run",
    "test:watch": "vitest",
    "test:coverage": "vitest run --coverage",
    "release": "pnpm build && npm publish --access public"
  },
  "peerDependencies": {
    "hono": "^4.10.7"
  },
  "peerDependenciesMeta": {
    "hono": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/node": "^20.19.25",
    "hono": "^4.10.7",
    "@vitest/coverage-v8": "^2.1.4",
    "typescript": "^5.9.3",
    "vitest": "^2.1.4"
  }
