{
  "name": "@circulo-ai/di",
  "version": "1.0.0",
  "private": false,
  "type": "module",
  "license": "Apache-2.0",
  "files": [
    "dist",
    "README.md",
    "docs.md"
  ],
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "default": "./dist/index.js"
    }
  },
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "dev": "tsc -p tsconfig.json --watch",
